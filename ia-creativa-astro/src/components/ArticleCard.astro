---
interface Props {
	title: string;
	summary: string;
	slug: string;
	image?: string;
	isGuide?: boolean;
}

const { title, summary, slug, image, isGuide = false } = Astro.props;
---

<a href={`/blog/${slug}`} class="group bg-white p-6 rounded-2xl shadow-sm hover:shadow-xl border border-gray-100 transition-all duration-300 flex flex-col h-full transform hover:-translate-y-1">
    <div class="relative overflow-hidden rounded-xl mb-4 aspect-video">
        <img 
            src={image || "https://placehold.co/600x400/f3f4f6/6366f1?text=IA+Creativa"} 
            alt={`Imagen destacada: ${title}`} 
            class="w-full h-full object-cover transform group-hover:scale-105 transition duration-500"
        >
        {isGuide && (
            <span class="absolute top-3 right-3 bg-indigo-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow-md">
                GUÍA
            </span>
        )}
    </div>
    
    <h3 class="text-xl font-bold mb-3 text-gray-900 group-hover:text-indigo-600 transition-colors leading-tight">
        {title}
    </h3>
    
    <p class="text-gray-500 text-sm line-clamp-3 mb-4 flex-grow">
        {summary}
    </p>
    
    <div class="mt-auto pt-4 border-t border-gray-50 flex items-center justify-between text-sm">
        <span class="font-medium text-indigo-600 group-hover:translate-x-1 transition-transform inline-flex items-center">
            Leer artículo 
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
        </span>
    </div>
</a>
